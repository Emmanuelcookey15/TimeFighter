<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/nepaColorBlack</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>


    <style name="StyleBlueBorder">
        <item name="android:background">@drawable/button_background_blue</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="StyleGreyBorder">
        <item name="android:background">@drawable/btn_bg_greyish</item>
        <item name="android:textColor">@android:color/background_dark</item>
    </style>

</resources>
