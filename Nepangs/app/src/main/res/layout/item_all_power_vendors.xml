<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/full_vendor_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <LinearLayout
            android:id="@+id/ll_item_cities"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_cities_vendor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lagos MainLand"
                android:textSize="16sp"
                />

        </LinearLayout>



        <ImageView
            android:id="@+id/item_all_vendor_logo"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_below="@+id/ll_item_cities"
            />

        <TextView
            android:id="@+id/item_all_vendor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_all_vendor_logo"
            android:text="Ikeja Electricity Distribution Company"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>