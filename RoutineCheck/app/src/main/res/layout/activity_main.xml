<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/routine_frequency"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_width="0dp"/>


    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/routine_name" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/routine_frequency"
        app:layout_constraintEnd_toEndOf="@+id/routine_frequency"
        app:layout_constraintStart_toStartOf="@+id/routine_frequency" android:hint="@string/routine_name"
        android:autofillHints="" tools:targetApi="o"/>


    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/routine_descrip" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/routine_name"
        app:layout_constraintEnd_toEndOf="@+id/routine_name"
        app:layout_constraintStart_toStartOf="@+id/routine_name" android:hint="@string/routine_description"
        android:importantForAutofill="no" tools:targetApi="o"/>

    <Button
        android:id="@+id/btn_routine_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/routine_descrip"
        app:layout_constraintStart_toStartOf="@+id/routine_descrip"
        app:layout_constraintTop_toBottomOf="@+id/routine_descrip" />

</androidx.constraintlayout.widget.ConstraintLayout>