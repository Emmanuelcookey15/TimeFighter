<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    app:cardCornerRadius="6dp"
    android:background="@drawable/line"
    app:cardElevation="0dp"
    android:layout_height="60dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/product_category_item_fullview"
        android:layout_width="match_parent"
        android:background="@drawable/line"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/product_category_imageView"
            android:layout_width="67dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/product_category_credentials"
            android:textSize="@dimen/_19sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_bold"
            android:text="U"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="@+id/product_category_imageView"
            app:layout_constraintEnd_toEndOf="@+id/product_category_imageView"
            app:layout_constraintStart_toStartOf="@+id/product_category_imageView"
            app:layout_constraintTop_toTopOf="@+id/product_category_imageView" />

        <TextView
            android:id="@+id/product_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_medium"
            android:text="Unpeep"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/product_category_count"
            app:layout_constraintEnd_toEndOf="@+id/product_category_count"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/product_category_count" />

        <TextView
            android:id="@+id/product_category_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_medium"
            android:text="@string/products_count"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.33"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.7" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>


