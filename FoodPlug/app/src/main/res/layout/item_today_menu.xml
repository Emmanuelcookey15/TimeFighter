<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="15dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/full_menu_daily_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/frame_menu_daily_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:padding="25dp"
            app:cardCornerRadius="18dp">

            <ImageView
                android:id="@+id/image_menu_daily"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:adjustViewBounds="true"
                android:src="@drawable/google_image"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_image"/>


        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frame_menu_daily_image"
            android:padding="12dp">

            <TextView
                android:id="@+id/name_menu_daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/price_menu_daily"
                android:ellipsize="end"
                android:padding="5dp"
                android:ems="12"
                android:singleLine="true"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                tools:ignore="MissingPrefix"
                tools:text="Onitsha Holiday Resort Hotels" />

            <TextView
                android:id="@+id/description_menu_daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_menu_daily"
                android:layout_alignParentStart="true"
                android:padding="5dp"
                android:layout_toStartOf="@+id/price_menu_daily"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                tools:ignore="MissingPrefix"
                tools:text="ikoyi, Lagos" />

            <TextView
                android:id="@+id/price_menu_daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:padding="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                tools:ignore="MissingPrefix"
                tools:text="N12,000" />

        </RelativeLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>