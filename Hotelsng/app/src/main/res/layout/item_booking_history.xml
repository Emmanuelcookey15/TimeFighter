<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/full_his_view"
    android:background="#FFF"
    android:padding="7dp"
    android:layout_margin="15dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/booking_history_default_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/top"
            android:scaleType="centerCrop"
            android:layout_marginEnd="15dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/booking_history_default_image"
            android:layout_toEndOf="@+id/booking_history_default_image"
            >

            <TextView
                android:id="@+id/booking_history_hotel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotel name"
                android:textSize="16sp"
                android:textColor="@color/text_black"
                />

            <TextView
                android:id="@+id/booking_history_hotel_address_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotel room name"
                android:textColor="#788996"
                android:textSize="13sp"
                android:layout_below="@+id/booking_history_hotel_name"
                />

            <Button
                android:id="@+id/booking_history_hotel_rating"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/booking_history_hotel_address_name"
                android:layout_marginTop="5dp"
                android:background="#2AB867"
                android:text="8.2"
                android:textColor="@color/PPR_FULL_WHITE"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/booking_history_hotel_excellence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/booking_history_hotel_address_name"
                android:layout_toEndOf="@+id/booking_history_hotel_rating"
                android:layout_toRightOf="@+id/booking_history_hotel_rating"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="Excellent"
                android:textColor="@color/text_black"
                android:textSize="12sp"
                tools:ignore="MissingPrefix" />


        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>