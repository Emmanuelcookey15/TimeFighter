<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context="ng.hotels.booking.app.fragments.ReviewsFragment">

    <ProgressBar
        android:id="@+id/progress_bar_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_reviews_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        />

    <Button
        android:id="@+id/btn_reviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_btn_background"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Select Room"
        android:textColor="@color/PPR_FULL_WHITE"
        />

</RelativeLayout>
