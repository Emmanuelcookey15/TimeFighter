<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="7dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/the_hotel_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/frame_thumbnail_image"
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <ImageView
                android:id="@+id/hotel_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_image"/>

        </FrameLayout>




        <LinearLayout
            android:id="@+id/hotel_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/frame_thumbnail_image"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:ellipsize="end"
                android:ems="12"
                android:singleLine="true"
                android:maxLines="1"
                android:id="@+id/hotel_name_list"
                fontPath="fonts/Lato-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esuites"
                android:textColor="@color/PPR_FULL_WHITE"
                android:textSize="17sp"
                tools:ignore="MissingPrefix" />


            <TextView
                android:id="@+id/hotel_location_list"
                fontPath="fonts/Lato-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hotel_name_list"
                android:layout_marginBottom="10dp"
                android:text="Asokoro Lagos"
                android:textColor="@color/PPR_FULL_WHITE"
                android:textSize="10sp"
                tools:ignore="MissingPrefix" />


        </LinearLayout>



        <TextView
            android:id="@+id/hotel_prize"
            fontPath="fonts/Lato-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/frame_thumbnail_image"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:text="â‚¦20,000"
            android:textColor="@color/colorTextBlack"
            android:textSize="12sp"
            tools:ignore="MissingPrefix"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/per_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/hotel_prize"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="6dp"
            android:text="PER NIGHT"
            android:textSize="8sp"
            tools:ignore="MissingPrefix"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp" />


        <Button
            android:id="@+id/hotel_rating"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/frame_thumbnail_image"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:background="#2AB867"
            android:text="8.2"
            android:textColor="@color/PPR_FULL_WHITE"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/hotel_excellence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frame_thumbnail_image"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/hotel_rating"
            android:layout_toRightOf="@+id/hotel_rating"
            android:text="Excellent"
            android:textColor="@color/text_black"
            android:textSize="12sp"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/reviews"
            fontPath="fonts/Lato-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hotel_rating"
            android:layout_toEndOf="@+id/hotel_rating"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/hotel_excellence"
            android:text="100 Reviews"
            android:textColor="@color/secondary_text"
            android:textSize="10sp"
            tools:ignore="MissingPrefix" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>


