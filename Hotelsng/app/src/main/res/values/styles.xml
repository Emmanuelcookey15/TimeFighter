<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowMenuStyle">@style/CustomOverFlowButton</item>
        <item name="android:editTextColor">@color/text_black</item>
        <item name="android:itemBackground">@color/PPR_FULL_WHITE</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="CustomOverFlowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_black_horizontal</item>
    </style>


    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/text_black</item>
        <item name="android:textColorSecondary">@color/new_fast_blue</item>
    </style>

    <style name="ToolBarStyleFirst" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/text_black</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ToolBarStyleSecond" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/text_black</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="AppBarCollapsed" parent="Theme.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppBarExpanded" parent="Theme.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#00000000</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
